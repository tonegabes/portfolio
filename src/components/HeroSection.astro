---
import { Image } from "astro:assets";
import HeroImage from "../assets/heroimage.jpg";
import HeroSocials from "./HeroSocials.astro";
---

<section id="about" class="flex flex-col md:flex-row gap-4 mx-4">
  <div class="flex flex-col gap-2 md:w-2/3 w-full">
    <div class="section-bg-color flex grow app-rounded-default reveal">
      <div class="flex flex-col gap-4 m-auto max-w-2xl py-12 px-8">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          Olá, eu sou <span class="text-rose-500">Tone Gabes</span> —
          crio experiências interativas com Laravel, Livewire e JavaScript.
        </h1>
        <p class="text-gray-700 text-lg mt-4">
          Desenvolvedor full‑stack focado em arquitetura limpa, interfaces
          encantadoras e conteúdo que gera impacto.
        </p>
        <div class="flex gap-3 mt-6">
          <a href="#projects" class="btn-primary hover-lift">
            <i class="ph-light ph-rocket-launch text-lg"></i>
            Ver projetos
          </a>
          <a href="mailto:tonegabes@gmail.com" class="hover-lift inline-flex items-center gap-2 px-4 py-2 rounded-md text-gray-700 bg-white/70 hover:bg-white transition-colors duration-300">
            <i class="ph-light ph-envelope-simple-open text-lg"></i>
            Contato
          </a>
        </div>
      </div>
    </div>

    <div class="reveal">
      <HeroSocials />
    </div>
  </div>

  <div class="aspect-square md:w-1/3 w-full reveal">
    <Image
      src={HeroImage}
      alt="Foto de perfil de Tone Gabes"
      class="w-full h-full object-cover app-rounded-default float-slow"
      loading="eager"
    />
  </div>
</section>
