---
import { Image } from "astro:assets";
import HeroImage from "../assets/heroimage.jpg";
import HeroSocials from "./HeroSocials.astro";
---

<div class="flex flex-col gap-1 max-w-7xl mx-auto w-fit mt-10">
  <div class="flex gap-4">
    <div
      class="bg-color-section flex app-section-hover w-2/3 app-rounded-default"
    >
      <div class="flex flex-col gap-4 m-auto max-w-2xl">
        <h1 class="text-4xl font-bold">
          I'm <span class="text-rose-500">Tone Gabes</span>. I build interactive
          platforms with Laravel and Javascript
        </h1>
        <p class="text-gray-700 text-lg mt-6">
          A fullstack developer with 10+ years building digital platforms from
          backend to UX. Passionate about clean architecture, delightful
          interfaces, and content that impacts.
        </p>
      </div>
    </div>

    <div class="aspect-square w-1/3">
      <Image
        src={HeroImage}
        alt="Hero Image"
        class="w-full h-full object-cover app-rounded-default"
      />
    </div>
  </div>

  <HeroSocials />
</div>
