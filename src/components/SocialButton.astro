---
interface Props {
  href: string;
  icon: string;
  text: string;
}

const { href, icon, text }: Props = Astro.props;
---

<a
  href={href}
  class="justify-between grow social-btn-bg-color px-4 py-2 app-rounded-default transition-all duration-300 flex items-center gap-4 group hover:ring-2 hover:ring-black hover-lift reveal"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Abrir ${text} em uma nova aba`}
>
  {text}
  <div>
    <i class={`ph-light ${icon} block text-xl transition-all duration-300 group-hover:hidden`}></i>
    <i class={`ph-light hidden ph-arrow-up-right text-xl transition-all duration-300 group-hover:block`}></i>
  </div>
</a>
