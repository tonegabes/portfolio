---
import Middot from "./Middot.astro";
---

<!-- TopBar Épica com Glassmorphism -->
<header class="sticky top-0 z-50 glass border-b border-neutral-200/20 backdrop-blur-xl">
  <nav class="section-content py-4">
    <div class="flex justify-between items-center">
      <!-- Logo Épico -->
      <a href="/" class="group flex items-center gap-3 transition-all duration-300 hover:scale-105">
        <div class="relative">
          <!-- Glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-accent-500 rounded-xl blur opacity-75 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative bg-white rounded-xl p-2 shadow-lg">
            <span class="font-mono text-xl font-bold bg-gradient-to-r from-primary-500 to-accent-500 bg-clip-text text-transparent">
              TG
            </span>
          </div>
        </div>
        <div class="hidden sm:block">
          <span class="font-bold text-neutral-900 group-hover:text-primary-500 transition-colors duration-300">
            Tonegabes
          </span>
          <div class="text-xs text-neutral-500 font-mono">Senior Developer</div>
        </div>
      </a>

      <!-- Navegação Principal -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/" class="nav-link">Início</a>
        <a href="/about" class="nav-link">Sobre</a>
        <a href="/projects" class="nav-link">Projetos</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/contact" class="btn-primary">
          <span>Contato</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>

      <!-- Menu Mobile -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-xl bg-neutral-100 hover:bg-neutral-200 transition-colors duration-200"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Menu Mobile Expandido -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pt-4 border-t border-neutral-200/20">
      <div class="flex flex-col gap-4">
        <a href="/" class="nav-link">Início</a>
        <a href="/about" class="nav-link">Sobre</a>
        <a href="/projects" class="nav-link">Projetos</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/contact" class="btn-primary w-full justify-center">
          <span>Contato</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Toggle mobile menu
  document.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    menuBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Fechar menu ao clicar em um link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });
  });
</script>
